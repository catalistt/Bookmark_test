<p id="notice"><%= notice %></p>

<h1 class="text-center">Types</h1>
<br>

<div class="container">
  <div class="row">
    <div class="col">
      <%= pie_chart @types_distribution, library: { chart: { backgroundColor: nil } }, title: "Number of bookmarks per type"%>
    </div>
    <div class="col">
      <h2>Types details</h2> 
      <table class="table table table-bordered table-hover table-sm bg-light">
        <thead class="bg-info">
          <tr>
            <th>Name</th>
            <th>Number of categories</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @types.each do |type| %>
            <tr>
              <td><%= type.name %></td>
              <td><%= type.bookmarks.count %></td>
              <td><%= link_to 'Show', type %></td>
              <td><%= link_to 'Edit', edit_type_path(type) %></td>
              <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </container>

<br>

