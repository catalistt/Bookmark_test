<%= render 'form', bookmark: @bookmark %>

<br>
<container>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
    <h3>Bookmarks details</h3>
      <table class="table table-bordered table-hover table-sm bg-light">
        <thead class="bg-info">
          <tr>
            <th>Url</th>
            <th>Name</th>
            <th>Type</th>
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @bookmarks.each do |bookmark| %>
            <tr>
              <td><%= bookmark.url %></td>
              <td><%= bookmark.name %></td>
              <td><%= bookmark.type %></td>
              <td><%= bookmark.category %></td>
              <td><%= link_to 'Show', bookmark %></td>
              <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
              <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</container>
<br>


